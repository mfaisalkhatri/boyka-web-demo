<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Framework Sample Web Suite" verbose="2">
    <test name="ECommerce End to End Tests">
        <classes>
            <class name="io.github.mfaisalkhatri.web.ECommerceTest">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testSearchProduct"/>
                    <include name="testAddProductToCart"/>
                    <include name="testCheckCartDetails"/>
                    <include name="testProductCheckout"/>
                    <include name="testConfirmOrder"/>
                    <include name="testOrderSuccess"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Login Data Provider Tests using Excel Sheet">
        <classes>
            <class name="io.github.mfaisalkhatri.web.LoginDataProviderTest">
                <methods>
                    <include name="testLogin"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
